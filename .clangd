Diagnostics:
  Suppress:
    
CompileFlags:
  Add:
    - -Wall
    - -Wextra
    - -Wpedantic
    - -std=c17
    - -Wno-incompatible-library-redeclaration
    - --target=riscv32-unknown-elf
  Remove:

ClangTidy:
  Add:
    - performance-*
    - modernize-*
    - bugprone-*
    - readability-*

CompilationDatabase:
  Path: "build/clang/"
